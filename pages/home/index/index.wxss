/* 选择学校 */
.choose {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-bottom: 2rpx #ccc solid;
}

.choose .area {
  font-size: 26rpx;
  color: #2a9f93;
}

.choose .input {
  width: 350rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 26rpx;
  border: 1rpx solid #2a9f93;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin: 0 30rpx;
  color: #999;
}

.choose button {
  position: relative;
  width: 150rpx;
  line-height: 44rpx;
  font-size: 26rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  background-color: #2a9f93;
  color: #fff;
}

/* 首页内容 */
.modules {
  position: relative;
}

/* 资讯导航 */
.nav {
  display: flex;
  justify-content: flex-start;
  align-items: stretch;

  position: absolute;
  left: 0;
  top: 0vh;
  z-index: 100;
  width: 100vw;
  height: 8vh;
  margin-bottom: 10rpx;
  border-bottom: 2rpx #ccc solid;
  font-size: 30rpx;
  overflow-x: auto;
  background-color: #fff;


}

.nav .nav-item {
  line-height: 8vh;
  text-align: center;
  width: 150rpx;
  min-width: 150rpx;
  font-weight: bold;
}

.active {
  color: #2a9f93;
  border-bottom:2rpx solid #2a9f93;
}

/* 轮播图 && 资讯内容 */
.box {
  position: absolute;
  top: 8vh;
  width: 100vw;
  height: 100vh;
}

.banner {
  height: 40vw;
  margin: 10rpx;
}

.banner .swiper {
  width: 100%;
  height: 40vw;
  border-radius: 10rpx;
}

.banner .swiper .slide-image {
  width: 100%;
  height: 40vw;
  border-radius: 10rpx;

}

/* 资讯列表 */
.info-box {
  display: flex;
  justify-content: space-between;
  margin: 10px;

  padding: 20rpx 0;
  border-bottom: 2rpx #ccc solid;
}

.info-box .info-box-item {
  position: relative;
}

.info-box .info-box-item .title {
  width: 50vw;
  /* height: 12vh; */
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;  /*要显示的行数*/
  -webkit-box-orient: vertical;
}

.info-box .info-box-item .type {
  position: absolute;
  bottom: 0;
  font-size: 28rpx;
  color: #ccc;
}

.info-box .info-box-item image {
  width: 40vw;
  height: 22.5vw;
  margin: 0 20rpx;
}



