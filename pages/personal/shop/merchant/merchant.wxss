/* pages/personal/shop/merchant/merchant.wxss */
page {
  background-color: #eee;
  height: 100%;
  width: 100%;
}

.v_box {
  background-color: #fff;
  width: 100%;
  /* height: 100%; */
}

.content .title{
  text-align: center;
  color: rgb(77, 71, 71);
  padding: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.content .content-item {
  /* height: 80px; */
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.content .content-item .pro-img {
  width: 160rpx;
}

.content .content-item .pro-img .auto-img {
  /* width: 100%; */
  width: 160rpx;
  height: 160rpx;
  display: block;
}

.content .content-item .pro-desc {
  margin-left: 20rpx;
}

.content .content-item .pro-desc .pro-name {
  height: 120rpx;
}

.content .content-item .pro-desc .pro-name .ch-name {
  font-size: 32rpx;
  color: #444;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.content .content-item .pro-desc .pro-name .en-name {
  font-size: 24rpx;
  color: #C2C2C2;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* 溢出隐藏*/
}