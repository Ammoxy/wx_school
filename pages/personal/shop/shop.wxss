/* pages/personal/shop/shop.wxss */
page {
  background-color: #eee;
  height: 100%;
  width: 100%;
}

.v_box {
  width: 100%;
  height: 100%;
}

.header {
  position: relative;
  width: 100vw;
  height: 56vw;
  background-color: #ddd;
}

.header .swiper {
  width: 100vw;
  height: 56vw;
}

.header .swiper .slide-image {
  width: 100vw;
  height: 56vw;
}

.modules {
  display: flex;
  justify-content: space-around;
  align-items: center;

  margin-bottom: 2rpx;
  background-color: #fff;
  font-size: 26rpx;
}

.modules .box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
  padding: 20rpx;
}

.modules .hr {
  border-left: 2rpx #ccc solid;
}

.modules .box image {
  width: 60rpx;
  height: 60rpx;
  margin: 12rpx 0;
  border-radius: 50%;
}

.content {
  background-color: #fff;
  /* height: 100%; */
  overflow-y: auto;
}

.content .title{
  text-align: center;
  color: rgb(77, 71, 71);
  padding: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.content .content-item {
  /* height: 80px; */
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.content .content-item .pro-img {
  width: 160rpx;
}

.content .content-item .pro-img .auto-img {
  /* width: 100%; */
  width: 160rpx;
  height: 160rpx;
  display: block;
}

.content .content-item .pro-desc {
  margin-left: 20rpx;
}

.content .content-item .pro-desc .pro-name {
  height: 120rpx;
}

.content .content-item .pro-desc .pro-price {
  height: 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  /* color: #165DAD; */
  display: flex;
}

.content .content-item .pro-desc .pro-price .item {
  margin-right: 10rpx;
}

.content .content-item .pro-desc .pro-name .ch-name {
  font-size: 32rpx;
  color: #444;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.content .content-item .pro-desc .pro-name .en-name {
  font-size: 24rpx;
  color: #C2C2C2;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* 溢出隐藏*/
}

.cl {
  color: #e4393c;
  font-size: 28rpx;
}

.cl1 {
  color: #C2C2C2;
  font-size: 24rpx;
  text-decoration:line-through;
}

.cl2 {
  color: #C2C2C2;
  font-size: 24rpx;
  /* float: right; */
}